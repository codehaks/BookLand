@page
@model BookLand.Web.Areas.Admin.Pages.Books.CreateModel
@{
}

<form method="post" class="form">
    <div class="row">
        <div class="col-6">

            <div class="mb-3">
                <label asp-for="Book.Title" class="form-label"></label>
                <input class="form-control" type="text" asp-for="Book.Title" />
            </div>

             <div class="mb-3">
                <label asp-for="Book.Author" class="form-label"></label>
                <input class="form-control" type="text" asp-for="Book.Author" />
            </div>

             <div class="mb-3">
                <label asp-for="Book.Year" class="form-label"></label>
                <input class="form-control" type="number" asp-for="Book.Year" />
            </div>

             <div class="mb-3">
                <label asp-for="Book.Pages" class="form-label"></label>
                <input  class="form-control" type="number" asp-for="Book.Pages" min=1 />
            </div>
            
            <button class="btn btn-primary mt-3">Submit</button>
        </div>
    </div>

</form>