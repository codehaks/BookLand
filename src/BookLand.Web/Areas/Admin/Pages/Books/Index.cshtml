@page
@model BookLand.Web.Areas.Admin.Pages.Books.IndexModel
@{
}

<h1>Books</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Title</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var book in Model.BookList)
        {
            <tr>
                <td>@book.Title</td>
                <td><a asp-page="./edit" asp-route-id="@book.Id" class="btn btn-primary">Edit</a></td>
                <td><a asp-page="./details" asp-route-id="@book.Id" class="btn btn-primary">Details</a></td>
            </tr>
        }
    </tbody>
</table>