@page
@model BookLand.Web.Pages.Shop.OrderModel
@{
}


<h1>Order Book</h1>

<table class="table">
    <tr>
        <td>Title</td>
        <td>@Model.Book.Title</td>
    </tr>
    <tr>
        <td>Price</td>
        <td>@Model.Book.Price</td>
  

</table>

<form method="post" class="mb-5">
    <input asp-for="BookId" hidden />
    <div class="mb-3">
        <label asp-for="ShippingAddress" class="form-label"></label>
        <input class="form-control" type="text" asp-for="ShippingAddress" />
        <span asp-validation-for="ShippingAddress" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input class="form-control" type="text" asp-for="Quantity" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <button class="btn btn-primary mb-5">Purchase</button>
</form>
